<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/lnLogin"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/app_margin_small"
        android:paddingRight="@dimen/app_margin_small"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/textInputLayoutEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_margin_small"
            android:orientation="horizontal">

            <TextView
                android:layout_marginRight="@dimen/fab_margin"
                android:layout_gravity="center"
                android:text="Mật khẩu cũ"
                android:textColor="@color/colorBlack"
                android:layout_width="100dp"
                android:textSize="@dimen/font_size_small"
                android:layout_height="wrap_content" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etOldpassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="@dimen/app_margin_small"
                android:hint="Nhập mật khẩu cũ"
                android:inputType="textPassword"
                android:maxLines="1"
                android:background="@drawable/bg_et_input"
                android:textColor="@android:color/black" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/app_margin_small">

            <TextView
                android:layout_marginRight="@dimen/fab_margin"
                android:layout_gravity="center"
                android:text="Mật khẩu cũ"
                android:textColor="@color/colorBlack"
                android:layout_width="100dp"
                android:textSize="@dimen/font_size_small"
                android:layout_height="wrap_content" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etOldPasswordReEnter"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Nhập lại mật khẩu cũ"
                android:paddingLeft="@dimen/app_margin_small"
                android:inputType="textPassword"
                android:maxLines="1"
                android:background="@drawable/bg_et_input"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/app_margin_small">

            <TextView
                android:layout_marginRight="@dimen/fab_margin"
                android:layout_gravity="center"
                android:text="Mật khẩu mới"
                android:textColor="@color/colorBlack"
                android:layout_width="100dp"
                android:textSize="@dimen/font_size_small"
                android:layout_height="wrap_content" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_acc_new_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="@dimen/app_margin_small"
                android:hint="Nhập mật khẩu mới"
                android:inputType="textPassword"
                android:maxLines="1"
                android:background="@drawable/bg_et_input"
                android:textColor="@android:color/black" />
        </LinearLayout>

    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/ibt_save"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/app_margin_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="40dp"
        android:textColor="@color/color_white"
        android:background="@drawable/selector_button_login"
        android:text="Lưu" />

</RelativeLayout>