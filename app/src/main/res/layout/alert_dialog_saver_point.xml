<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:stretchColumns="*"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">


            <TextView
                android:id="@+id/tvTitleToolbar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="Lưu điểm"
                android:layout_marginLeft="@dimen/font_size_medium"
                android:textColor="@color/color_white"
                android:textSize="@dimen/font_size_medium"
                android:textStyle="bold" />

            <!--<ImageButton-->
                <!--android:id="@+id/btnTitleClose"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:scaleType="centerInside"-->
                <!--android:background="@drawable/selector_button_back"-->
                <!--android:paddingLeft="@dimen/app_margin_small"-->
                <!--android:paddingTop="@dimen/app_margin_small"-->
                <!--android:paddingRight="@dimen/app_margin_small"-->
                <!--android:paddingBottom="@dimen/app_margin_small"-->
                <!--android:src="@drawable/ic_close" />-->

        </LinearLayout>
    </android.support.design.widget.AppBarLayout>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView2"
            android:textSize="@dimen/font_size_medium"
            android:layout_margin="@dimen/app_margin_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên sinh viên" />

        <TextView
            android:id="@+id/txt_name"
            android:textSize="@dimen/font_size_medium"
            android:layout_margin="@dimen/app_margin_small"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           >
        </TextView>

    </TableRow>

    <View
        android:background="@color/colorGray"
        android:layout_width="match_parent"
        android:layout_height="0.1dip" />

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView"
            android:textSize="@dimen/font_size_medium"
            android:layout_margin="@dimen/app_margin_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã sinh viên" />

        <TextView
            android:id="@+id/txt_student_code"
            android:textSize="@dimen/font_size_medium"
            android:layout_margin="@dimen/app_margin_small"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        </TextView>

    </TableRow>
    <View
        android:background="@color/colorGray"
        android:layout_width="match_parent"
        android:layout_height="0.1dip" />
    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/textView4"
            android:textSize="@dimen/font_size_medium"
            android:layout_margin="@dimen/app_margin_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cấp độ" />

        <TextView
            android:id="@+id/txt_level"
            android:textSize="@dimen/font_size_medium"
            android:layout_margin="@dimen/app_margin_small"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal" />

    </TableRow>
    <View
        android:background="@color/colorGray"
        android:layout_width="match_parent"
        android:layout_height="0.1dip" />
    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/textView5"
            android:textSize="@dimen/font_size_medium"
            android:layout_margin="@dimen/app_margin_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Môn học" />

        <TextView
            android:id="@+id/txt_subject"
            android:textSize="@dimen/font_size_medium"
            android:layout_margin="@dimen/app_margin_small"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal" />

    </TableRow>
    <View

        android:background="@color/colorGray"
        android:layout_width="match_parent"
        android:layout_height="0.1dip" />

    <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:textSize="@dimen/font_size_medium"
            android:layout_margin="@dimen/app_margin_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Điểm" />

        <TextView
            android:id="@+id/txt_point"
            android:textSize="@dimen/font_size_medium"
            android:layout_margin="@dimen/app_margin_small"
            android:textColor="@color/color_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal" />

    </TableRow>
    <LinearLayout
        android:gravity="center"
        android:layout_margin="@dimen/app_margin_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="Đóng"
            android:id="@+id/btClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/app_margin_small"
            android:layout_weight="1"
            android:textColor="@color/color_white"
            android:background="@drawable/selector_btn_cancel" />

        <Button
            android:id="@+id/btSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/app_margin_small"
            android:textColor="@color/color_white"
            android:background="@drawable/selector_button_login"
            android:text="Nạp bài" />
    </LinearLayout>
</TableLayout>