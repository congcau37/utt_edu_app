<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_multiple_choice"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/content"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:id="@+id/lnTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNum"
                    android:layout_marginTop="@dimen/app_margin_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Câu 1"
                    android:textColor="#ff0011"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/app_margin_medium"
                    android:text="Câu hỏi thứ nhất "
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="italic" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:visibility="visible" />

            <LinearLayout
                android:layout_below="@id/lnTop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/app_margin_large"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A. "
                        android:textColor="#1502c7"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/app_margin_large"
                        android:text="B. "
                        android:textColor="#1502c7"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                    android:layout_marginTop="@dimen/app_margin_large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C. "
                    android:textColor="#1502c7"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                    <TextView
                        android:layout_marginTop="@dimen/app_margin_large"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="D. "
                        android:textColor="#1502c7"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <RadioGroup
                    android:id="@+id/radGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp">

                    <RadioButton
                        android:id="@+id/radA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="Trả lời 1"
                        android:textColor="#1502c7"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/radB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/app_margin_small"
                        android:checked="false"
                        android:text="Trả lời 2"
                        android:textColor="#1502c7"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/radC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/app_margin_small"
                        android:checked="false"
                        android:text="Trả lời 3"
                        android:textColor="#1502c7"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <RadioButton
                        android:id="@+id/radD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/app_margin_small"
                        android:checked="false"
                        android:text="Trả lời 4"
                        android:textColor="#1502c7"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RadioGroup>
            </LinearLayout>
            
        </RelativeLayout>

    </ScrollView>
</LinearLayout>
