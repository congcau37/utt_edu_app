<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_no_radius_white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lnStart"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSubject"
            android:layout_weight="1"
            android:padding="@dimen/app_margin_small"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/color_black_light"
            android:textSize="@dimen/font_size_medium" />

        <RelativeLayout
            android:id="@+id/rlEdit"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/selector_item_edit"
            android:paddingLeft="@dimen/app_margin_medium"
            android:paddingRight="@dimen/app_margin_medium">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_edit" />

        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_below="@id/lnStart"
        android:layout_marginTop="@dimen/app_margin_small_small"
        android:layout_width="match_parent"
        android:background="@color/colorGray"
        android:layout_height="@dimen/view_row_height"/>
</LinearLayout>