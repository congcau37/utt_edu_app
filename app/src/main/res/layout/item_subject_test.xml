<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="@dimen/app_margin_small"
    android:id="@+id/llSubjectTest"
    android:background="@drawable/selector_item_list">

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_gravity="center"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/app_margin_small"
        android:src="@drawable/book" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/font_size_medium"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_weight="1"
        android:padding="10dp"
        android:paddingLeft="5sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tvTimerAndQuestion"
        android:text="4/10"
        android:layout_gravity="right|center_vertical"
        android:textSize="@dimen/font_size_small"
        android:textColor="@color/color_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvTimeQuestion"
        android:text=" (câu/phút)"
        android:textSize="12dp"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="@dimen/app_margin_small"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/ivStatus"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/app_margin_small"
        android:src="@drawable/ic_checked"
        android:scaleType="centerInside"
        android:visibility="gone"
        android:layout_width="30dp"
        android:layout_height="30dp" />
</LinearLayout>